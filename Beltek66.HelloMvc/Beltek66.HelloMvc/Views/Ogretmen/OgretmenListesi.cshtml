
@{
    ViewData["Title"] = "OgretmenListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Ogretmen>
<h1>Öğretmen Listesi</h1>

    <table class="table">

        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Bölüm</th>
               <th>Yaş</th>

               <th>İşlemler</th>
              </tr>   
        </thead>
        <tbody>
             @foreach (var ogrt in Model)
            {
             <tr>

               <td>@ogrt.Ad</td>
               <td>@ogrt.Soyad</td>
               <td>@ogrt.Bolum</td>
               <td>@ogrt.Yas</td>
               <td><a class="btn btn-sm btn-outline-primary" href="/Ogretmen/OgretmenDetay/@ogrt.OgretmenId">Detay</a>  <a href="/Ogretmen/OgretmenSil/@ogrt.OgretmenId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Emin Misiniz?')">Sil</a>   </td>
            </tr>
                
            }
           
    </tbody>

    </table>
