@model IEnumerable<Beltek66.HelloMvc.Models.Sinif>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sınıf Anasayfası</h1>

<p>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SinifAd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SinifAd)
            </td>
            <td>
                 <a class="link-secondary" asp-action="Ogrenciler" asp-route-id="@item.SinifId">Öğrenciler</a> |
                <a class="link-secondary" asp-action="Edit" asp-route-id="@item.SinifId">Edit</a> |
                <a class="link-secondary" asp-action="Details" asp-route-id="@item.SinifId">Details</a> |
                <a class="link-danger" asp-action="Delete" asp-route-id="@item.SinifId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
