@model IEnumerable<Beltek66.HelloMvc.Models.OgretmenDers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Öğretmen Ders Atama Anasayfası</h1>

<p>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ogretmen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ders)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ogretmen.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ders.DersAd)
            </td>
            <td>
                <a class="link-secondary" asp-action="Edit" asp-route-id="@item.OgretmenDersId">Edit</a> |
                <a class="link-secondary" asp-action="Details" asp-route-id="@item.OgretmenDersId">Details</a> |
                <a class="link-danger" asp-action="Delete" asp-route-id="@item.OgretmenDersId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
