@model List<Ogrenci>


    <table class="table">

        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
               <th>Yaş</th>
               <th>İşlemler</th>
              </tr>   
        </thead>
        <tbody>
             @foreach (var ogr in Model)
            {
             <tr>

               <td>@ogr.Ad</td>
               <td>@ogr.Soyad</td>
               <td>@ogr.Yas</td>
               <td><a class="btn btn-sm btn-outline-primary" href="/Ogrenci/OgrenciDetay/@ogr.OgrenciId">Detay</a>  <a href="/Ogrenci/OgrenciSil/@ogr.OgrenciId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Emin Misiniz?')">Sil</a>   </td>
            </tr>
                
            }
           
    </tbody>

    </table>
         
               
